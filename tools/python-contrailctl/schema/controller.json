{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Contrail controller configuration",
  "type": "object",
  "id": "root",
  "additionalProperties": false,
  "properties": {
    "GLOBAL": {
      "$ref": "definitions.json#/definitions/global_config"
    },
    "KEYSTONE": {
      "$ref": "definitions.json#/definitions/keystone_config"
    },
    "CONTROLLER": {
      "id": "controller",
      "type": "object",
      "description": "Global values for controller container",
      "additionalProperties": false,
      "properties": {
        "encap_priority": {
          "description": "encapsulation priority",
          "type": "string"
        },
        "external_routers_list": {
          "description": "dictionary of external, physical routers in form of {name1: ip1, name2: ip2}",
          "type": "object"
        }
        "bgp_asn": {
          "description": "asn of control node",
          "type": "string"
        },
      }
    },
    "RABBITMQ": {
      "id": "rabbitmq",
      "type": "object",
      "description": "rabbitmq specific configurations",
      "additionalProperties": false,
      "properties": {
        "user": {
          "description": "rabbitmq user",
          "type": "string"
        },
        "group": {
          "description": "rabbitmq group",
          "type": "string"
        }
      }
    },
    "WEBUI": {
      "id": "webui",
      "type": "object",
      "description": "WEBUI section",
      "additionalProperties": false,
      "properties": {
        "http_listen_port": {
          "description": "http listen port",
          "type": "string"
        },
        "https_listen_port": {
          "description": "https listen port",
          "type": "string"
        }
      }
    },
    "CONTROL": {
      "id": "control",
      "type": "object",
      "description": "CONTROL section",
      "additionalProperties": false,
      "properties": {
        "log": {
          "description": "log file",
          "type": "string"
        },
        "log_level": {
          "description": "",
          "type": "string"
        },
        "introspect_port": {
          "description": "service introspect port",
          "type": "string"
        },
        "listen_port": {
          "description": "service listen port",
          "type": "string"
        },
        "bgp_port": {
          "description": "bgp port",
          "type": "string"
        },
        "xmpp_server_port": {
          "description": "xmpp server port",
          "type": "string"
        }
      }
    },
    "DNS": {
      "id": "dns",
      "type": "object",
      "description": "dns section",
      "additionalProperties": false,
      "properties": {
        "log": {
          "description": "log file",
          "type": "string"
        },
        "log_level": {
          "description": "",
          "type": "string"
        },
        "introspect_port": {
          "description": "service introspect port",
          "type": "string"
        },
        "listen_port": {
          "description": "service listen port",
          "type": "string"
        },
        "named_log_file": {
          "description": "named log file",
          "type": "string"
        },
        "dns_server_port": {
          "description": "dns server port",
          "type": "string"
        }
      }
    },
    "CASSANDRA": {
      "$ref": "definitions.json#/definitions/cassandra_config"
    },
    "API": {
      "id": "api",
      "type": "object",
      "description": "",
      "additionalProperties": false,
      "properties": {
        "log": {
          "description": "log file",
          "type": "string"
        },
        "log_level": {
          "description": "",
          "type": "string"
        },
        "introspect_port": {
          "description": "service introspect port",
          "type": "string"
        },
        "listen_port": {
          "description": "service listen port",
          "type": "string"
        },
        "list_optimization_enabled": {
          "description": "Enable optimizations to list resources",
          "type": "boolean"
        }
      }
    },
    "SCHEMA": {
      "$ref": "definitions.json#/definitions/contrail_log_n_port_config"
    },
    "SVC_MONITOR": {
      "$ref": "definitions.json#/definitions/contrail_log_n_port_config"
    },
    "DEVICE_MANAGER": {
      "$ref": "definitions.json#/definitions/contrail_log_n_port_config"
    }
  }
}
